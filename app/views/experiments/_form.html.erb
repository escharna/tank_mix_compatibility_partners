<div class='row pl-2 pr-2'>
  <div class='col-sm-12 col-md-6'>
    <%= form_for(@experiment) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, :class =>"form-control", placeholder: "Name", value:"" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, :class =>"form-control", placeholder:"Description", value:""%>
      </div>
      <%= f.submit 'Create Experiment', disable_with: 'Saving...', :class =>"form-control btn btn-primary" %>
    <% end %>
  </div>
</div>
