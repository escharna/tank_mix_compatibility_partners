<div class='row pl-2 pr-2'>
  <div class='col-sm-12 col-md-6'>
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.text_field :first_name, :class =>"form-control", placeholder: "First Name", value:"" %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name, :class =>"form-control", placeholder: "Last Name", value:"" %>
      </div>
      <div class="form-group">
        <%= f.text_field :job_title, :class =>"form-control", placeholder: "Job Title", value:"" %>
      </div>
      <%= f.submit 'Save User', disable_with: 'Saving...', :class =>"form-control btn btn-primary" %>
    <% end %>
  </div>
</div>
